<%#
# Application Layout

This view template is used as the layout
for every page that Administrate generates.

By default, it renders:
- Navigation
- Content for a search bar
  (if provided by a `content_for` block in a nested page)
- Flashes
- Links to stylesheets and JavaScripts
%>

<!DOCTYPE html>
<html lang="<%= I18n.locale %>">
<head>
  <meta charset="utf-8">
  <meta name="ROBOTS" content="NOODP">
  <meta name="viewport" content="initial-scale=1">
  <title>
    <%= content_for(:title) %> &mdash; ODIE
  </title>
  <%= stylesheet_link_tag 'administrate/application' %>
  <style>
    h3 {
      font-size: 1.26em;
    }

    h2 {
      font-size: 1.59em;
    }

    h1 {
      font-size: 2em;
    }

    header {
      width: 100%;
    }

    header h1 {
      float: left;
      color: #1976d2;
    }

    header img {
      float: left;
      height: 3em;
      margin-top: -0.25em;
      margin-left: -0.5em;
    }

    .app-container.header {
      min-height: auto;
      padding-bottom: 0;
    }

    .button-secondary {
      background-color: #aaa;
      padding: 6px 12px;
      font-size: 0.8em;
      margin-top: 0.5em;
    }
  </style>
  <%= csrf_meta_tags %>
  <%= favicon_link_tag asset_path('favicon.ico') %>
</head>
<body>
  <%= render 'shared/header' %>
  <% if controller.class.name.starts_with? 'Admin' %>
    <%= render 'administrate/application/icons' %>

    <div class="app-container">
      <%= render 'navigation' -%>

      <main class="main-content" role="main">
        <%= render 'flashes' -%>
        <%= yield %>
      </main>
    </div>

    <%= render 'javascript' %>
  <% else %>
    <div class="app-container">
      <main class="main-content" role="main">
        <%= render 'administrate/application/flashes' -%>
        <%= yield %>
      </main>
    </div>
  <% end %>
</body>
</html>

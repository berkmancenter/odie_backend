{
  "index_patterns": ["odi*"],
  "settings": {
    "number_of_shards": 1,
    "number_of_replicas": 0,
    "mapping": {
      "total_fields": {
        "limit": "10000"
      }
    },
    "analysis": {
      "analyzer": {
        "domain_name_analyzer": {
          "filter":"lowercase",
          "tokenizer": "domain_name_tokenizer",
          "type": "custom"
        }
      },
      "tokenizer": {
        "domain_name_tokenizer": {
          "type": "PathHierarchy",
          "delimiter": ".",
          "reverse": true
        }
      }
    }
  },
  "mappings": {
    "_doc": {
      "properties": {
        "text": {
          "type": "keyword"
        },
        "retweeted_status": {
          "type": "object",
          "properties": {
            "extended_tweet": {
              "type": "object",
              "properties": {
                "entities": {
                  "type": "object",
                  "properties": {
                    "urls": {
                      "properties": {
                        "expanded_url": {
                          "type": "keyword",
                          "fields": {
                            "domain_names": {
                              "analyzer":  "domain_name_analyzer",
                              "type": "text"
                            }
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        },
        "entities": {
          "type": "object",
          "properties": {
            "urls": {
              "properties": {
                "expanded_url": {
                  "type": "keyword",
                  "fields": {
                    "domain_names": {
                      "analyzer":  "domain_name_analyzer",
                      "type": "text"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
